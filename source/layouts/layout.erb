      <header class="site-header">
        <div class="wrapper">
          <%= link_to 'Bath Ruby Conference 2016', '/', :class => "logo" %>
          <nav class="main-nav">
            <ul>
              <li class="nav-home"><%= link_to 'Home', '/' %></li>
